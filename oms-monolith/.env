# Database Configuration
TERMINUSDB_ENDPOINT=http://terminusdb:6363
TERMINUSDB_TEAM=admin
TERMINUSDB_DB=oms_db
TERMINUSDB_USER=admin
TERMINUSDB_KEY=root

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=oms_audit
POSTGRES_USER=oms_user
POSTGRES_PASSWORD=oms_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Event System Configuration
EVENT_BROKER_URL=redis://redis:6379
EVENT_MAX_RETRIES=3
EVENT_RETRY_DELAY=1000

# Service Configuration
SERVICE_LOG_LEVEL=INFO
SERVICE_DEBUG=true
SERVICE_ENVIRONMENT=development

# Authentication Configuration
AUTH_MODE=local
JWT_SECRET_KEY=test-secret-key-for-development
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# NATS Configuration
NATS_URL=nats://nats:4222

# Monitoring
ENABLE_AUDIT_DLQ=true
DLQ_ALERT_THRESHOLD=100
PROMETHEUS_ENABLED=true

# Extension Features
ENABLE_EMBEDDINGS=false
ENABLE_TIME_TRAVEL=true
ENABLE_SMART_CACHE=true
ENABLE_JAEGER_TRACING=true