# Ontology Management System Environment Variables
# Copy this file to .env and update with your actual values

# Environment Settings
ONTOLOGY_ENVIRONMENT=development
ONTOLOGY_DEBUG=true

# Service Settings
ONTOLOGY_SERVICE_NAME=ontology-management-system
ONTOLOGY_SERVICE_VERSION=2.0.0

# Security Settings
ONTOLOGY_SECRET_KEY=your-secure-secret-key-here
ONTOLOGY_JWT_ALGORITHM=HS256
ONTOLOGY_JWT_EXPIRATION_MINUTES=30

# Database Settings
ONTOLOGY_DATABASE_URL=http://localhost:16363
ONTOLOGY_DATABASE_USERNAME=admin
ONTOLOGY_DATABASE_PASSWORD=your-secure-password-here

# TerminusDB Settings
TERMINUS_SERVER_URL=http://localhost:16363
TERMINUS_DB=oms_test
TERMINUS_ORGANIZATION=admin
TERMINUS_DB_USER=admin
TERMINUS_DB_PASSWORD=your-secure-password-here
TERMINUS_DB_KEY=your-secure-key-here

# Redis Settings
ONTOLOGY_REDIS_URL=redis://localhost:6379
ONTOLOGY_REDIS_PREFIX=ontology:

# Event Settings
ONTOLOGY_EVENT_RETENTION_DAYS=30
ONTOLOGY_EVENT_BATCH_SIZE=100

# JetStream Event Configuration
JETSTREAM_URL=nats://localhost:4222
JETSTREAM_SUBJECT_PREFIX=quiver.events
JETSTREAM_CONSUMER_NAME=oms-consumer
JETSTREAM_MAX_INFLIGHT=50
JETSTREAM_ACK_TIMEOUT=30

# Event Processing Policy
ENABLE_EVENT_DEDUPLICATION=true
EVENT_CACHE_TTL_SECONDS=300
EVENT_PROCESSING_TIMEOUT=60

# Logging Settings
ONTOLOGY_LOG_LEVEL=INFO
ONTOLOGY_LOG_FORMAT=json

# Authentication Settings
BYPASS_AUTH=false
USE_MSA_AUTH=false

# GraphQL Settings
GRAPHQL_ENABLED=true

# Development/Test Settings
ENVIRONMENT=development

# Test User Settings (for development only)
TEST_USER_PASSWORD=test_password

# User Service Database Settings (for development scripts)
USER_DB_HOST=localhost
USER_DB_PORT=15433
USER_DB_USER=user_user
USER_DB_PASSWORD=user_pass
USER_DB_NAME=user_db